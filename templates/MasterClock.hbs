<form autocomplete="off" onsubmit="event.preventDefault();">
		<div class="clockrows">
			<div class="clockcols">
				<button type="submit" class="Add-Long-Rest" name="submit" value="1"><i class="fas fa-moon"></i> Long Rest</button>
				<button type="submit" class="Add-Hour-Ten" name="submit" value="1">+1</button>
				<text>Hour (Tens)</text>
			</div>
			<div class="clockcols">
				<button type="submit" class="Add-Hour-five" name="submit" value="1">+5</button>
				<button type="submit" class="Add-Hour" name="submit" value="1">+1</button>
				<text>Hour</text>
			</div>
			<div class="clockcols">
				<button type="submit" class="Add-Minute-Ten-Three" name="submit" value="1">+3</button>
				<button type="submit" class="Add-Minute-Ten" name="submit" value="1">+1</button>
				<text>Minute (Tens)</text>
			</div>
			<div class="clockcols">
				<button type="submit" class="Add-Minute-five" name="submit" value="1">+5</button>
				<button type="submit" class="Add-Minute" name="submit" value="1">+1</button>
				<text>Minute</text>
			</div>
		</div>
		{{> "InGameTime.Clock"}}
	  	<div class="clockrows">
			<div class="clockcols">
				<text>Hour (Tens)</text>
				<button type="submit" class="Sub-Hour-Ten" name="submit" value="1">-1</button>
				<button type="submit" class="Toggle-AM-PM" name="submit" value="1">Toggle AM/PM</button>
			</div>
			<div class="clockcols">
				<text>Hour</text>
				<button type="submit" class="Sub-Hour" name="submit" value="1">-1</button>
				<button type="submit" class="Sub-Hour-five" name="submit" value="1">-5</button>
			</div>
			<div class="clockcols">
				<text>Minute (Tens)</text>
				<button type="submit" class="Sub-Minute-Ten" name="submit" value="1">-1</button>
				<button type="submit" class="Sub-Minute-Ten-Three" name="submit" value="1">-3</button>
				</div>
			<div class="clockcols">
				<text>Minute</text>
				<button type="submit" class="Sub-Minute" name="submit" value="1">-1</button>
				<button type="submit" class="Sub-Minute-five" name="submit" value="1">-5</button>
			</div>
		</div>
	</form>